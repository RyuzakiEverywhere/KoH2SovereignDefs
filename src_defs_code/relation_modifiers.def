def FadingModifier
{
	string stat
	float value = 0
	float fade_in_time = 0
	float duration
	float fade_out_time = 0
	int max_stacks = 0
	float step = -1
}

def FadingRelModifier : FadingModifier
{
	stat = "relations"
	float perm_value
	peak = 0.5
	value = (perm_value * peak)
	duration = 300
	fade_out_time = 600
}

